extends layout.pug
block content
    div.app--tweet
        form
            div.circle--fluid
                div.circle--fluid--cell.circle--fluid--primary.align-bottom.app--tweet--post
                    div.app--avatar(style='background-image: url(/static/images/m-spore.png)')
                        img(src="/static/images/m-spore.png")
            textarea.circle--textarea--input(placeholder="What's happening?")#tweet-textarea
            strong.app--tweet--char#tweet-char 140
            div.circle--fluid--cell.align-bottom
                button.button-primary Tweet

