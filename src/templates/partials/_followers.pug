div.grid-33
    div.app--section
        ul.app--user--list
            for follower in followers.users
                li
                    div.circle--fluid
                        div.circle--fluid--cell.circle--fluid--primary
                            a.app--tweet--author
                                div.app--avatar(style='background-image: url(' + follower.profile_image_url_https + ')')
                                    img(src=follower.profile_image_url_https)
                                h4 #{follower.name}
                                p @#{follower.screen_name}
                        div.circle--fluid--cell
                            a.button.button-text Unfollow

